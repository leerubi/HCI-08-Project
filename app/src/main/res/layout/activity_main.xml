<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity" android:layout_width="match_parent" android:layout_height="match_parent"
        android:visibility="visible" android:fadingEdge="none"
        android:theme="@style/Theme.NoTitle">
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:id="@+id/ConnectText" android:layout_marginTop="72dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <ImageButton
            android:layout_width="120"
            android:layout_height="120"
            android:id="@+id/BluetoothConnectButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="72dp"
            android:contentDescription="@string/connect"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ConnectText"
            app:layout_constraintHorizontal_bias="0.497"
            tools:src="@mipmap/BluetoothDeactivated" style="@style/Widget.AppCompat.ImageButton"
            android:scaleType="fitCenter"/>

</android.support.constraint.ConstraintLayout>